<%- include('../partials/header') -%>
<div class="container">
  <div class="row">
    <div style="width:30%; margin : 10% auto">
      <h1 style="text-align:center">Edit your comment for <%= camp.name %> </h1>
      <form action="/campsground/<%= camp._id %>/comment/<%= comment._id%>?_method=PUT" method="post">
        <div class="form-group">
          <input type="text" class="form-control" name="title" value="<%= comment.title %>">
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Update your comment</button>
        </div>
      </form>
    </div>
  </div>
</div>


<%- include('../partials/footer') -%>
